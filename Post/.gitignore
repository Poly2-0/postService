############################################################
# PostService - Spring Boot (Maven) .gitignore
############################################################


########################
# 1) Maven / Build
########################
target/
*.class
*.jar
*.war
*.ear

########################
# 2) Spring Boot Logs
########################
logs/
*.log

########################
# 3) IntelliJ IDEA
########################
.idea/
*.iml
*.ipr
*.iws
out/

########################
# 4) Eclipse / STS
########################
.classpath
.project
.settings/
.metadata/
.recommenders/

########################
# 5) VS Code
########################
.vscode/
*.code-workspace

########################
# 6) OS files
########################
.DS_Store
Thumbs.db

########################
# 7) Environment / Secrets
########################
.env
*.env
application-prod.properties
application-prod.yml
application-local.properties
application-local.yml
!.env.example

# Sensitive configuration files containing passwords/keys
**/application-*.properties
**/application-*.yml
!src/main/resources/application.properties
!src/main/resources/application.yml

########################
# 8) Test Reports
########################
/surefire-reports/
/failsafe-reports/

########################
# 9) Temporary / Backup
########################
*.tmp
*.bak
*.swp
*.swo
*~
.#*

########################
# 10) Node.js (if using frontend tools)
########################
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

########################
# 11) Database
########################
*.db
*.sqlite
*.sqlite3
*.h2.db

########################
# 12) Spring Boot Metadata
########################
src/main/resources/META-INF/
